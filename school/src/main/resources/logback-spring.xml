<?xml version="1.0" encoding="UTF-8"?>

        <configuration>


    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">


    <encoder>

    <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>

</encoder>

</appender>


    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">

    <File>/tmp/var/mylog.log</File>

    <append>true</append>


    <encoder>

    <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>

</encoder>


    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

    <!-- rollover daily -->


    <fileNamePattern>/tmp/var/mylog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>

    <maxFileSize>10MB</maxFileSize>

    <!-- keep 30 days' worth of history -->


    <maxHistory>30</maxHistory>

    <totalSizeCap>3GB</totalSizeCap>

</rollingPolicy>

</appender>


    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="TOMCAT">

    <File>/tmp/var/myTomcatLog.log</File>

    <append>true</append>


    <encoder>

    <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.sss}] [%C] [%t] [%L] [%-5p] %m%n</pattern>

</encoder>


    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

    <!-- rollover daily -->


    <fileNamePattern>/tmp/var/myTomcatLog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>

    <maxFileSize>10MB</maxFileSize>

    <!-- keep 30 days' worth of history -->


    <maxHistory>30</maxHistory>

    <totalSizeCap>3GB</totalSizeCap>

</rollingPolicy>

</appender>


    <root additivity="false" level="OFF">

    <appender-ref ref="STDOUT"/>

</root>


    <logger name="org.apache.catalina" additivity="false" level="OFF">

    <appender-ref ref="TOMCAT"/>

    <appender-ref ref="STDOUT"/>

</logger>


    <logger name="org.apache.coyote" additivity="false" level="OFF">

    <appender-ref ref="TOMCAT"/>

    <appender-ref ref="STDOUT"/>

</logger>


    <logger name="org.apache.tomcat" additivity="false" level="OFF">

    <appender-ref ref="TOMCAT"/>

    <appender-ref ref="STDOUT"/>

</logger>


    <logger name="org.springframework" additivity="false" level="OFF">

    <appender-ref ref="FILE"/>

</logger>


    <logger name="com.lambdaschool" additivity="false" level="TRACE">

    <appender-ref ref="STDOUT"/>

</logger>

</configuration>